// Pointers 
// 		& to know what address is stored
//		* to get value from pointed address
//	Type of pointer must match the type of variable it is pointing

void func(int* a) {
	*a += 10;
	cout << a << endl;
	cout << *a << endl;
}

int main() {
	int i = 2;
	func(&i);
	cout << i;
	return 0;
}

int main() {
	int a = 5;
	cout << "Original value of a:\t " << a << endl;
	int* px = &a;

	*px = 17;
	cout << "New value of a:\t " << a << endl;
	return 0;
}
